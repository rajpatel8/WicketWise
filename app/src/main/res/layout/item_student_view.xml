<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/white"
    android:padding="20dp"
    android:layout_marginBottom="12dp"
    android:elevation="3dp">

    <!-- Student Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Student Icon -->
        <ImageView
            android:id="@+id/studentIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_student"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/cricket_green_light"
            android:padding="12dp"
            android:tint="@color/cricket_green_primary"
            android:layout_marginEnd="16dp" />

        <!-- Student Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/studentNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/studentAgeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 years old"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/studentSkillLevelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediate"
                    android:textColor="@color/cricket_green_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Skill Level Indicator -->
        <View
            android:id="@+id/skillLevelIndicator"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/cricket_green_primary" />

    </LinearLayout>

    <!-- Contact Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_email"
                android:tint="@color/cricket_green_primary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/studentEmailText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="student@example.com"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- Phone (conditional) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_phone"
                android:tint="@color/cricket_green_primary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/studentPhoneText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+1 234 567 8900"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginBottom="12dp" />

    <!-- Footer Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_calendar"
            android:tint="@color/text_secondary"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/studentJoinedDateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Joined: January 2025"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <!-- Future: Add action buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:textColor="@color/cricket_green_primary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>