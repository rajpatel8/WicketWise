<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_primary"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Brand Gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/login_gradient_background"
            android:paddingBottom="32dp">

            <!-- Top Bar with Logout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcomeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back!"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to become better?"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:alpha="0.9"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logoutBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Logout"
                    android:textColor="@color/brand_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="20dp"
                    android:paddingHorizontal="20dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

            </LinearLayout>

            <!-- User Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:gravity="center_vertical">

                    <!-- Profile Avatar -->
                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/logo_circle_background"
                        android:backgroundTint="@color/brand_light">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_person"
                            android:layout_gravity="center"
                            app:tint="@color/brand_primary" />

                    </FrameLayout>

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/status_badge_background"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_sports_cricket"
                                app:tint="@color/brand_primary"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:id="@+id/userTypeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coach/Student"
                                android:textColor="@color/brand_primary"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Status Indicator -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@color/brand_primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="-16dp">

            <!-- Quick Actions Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quick Actions"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_trophy"
                    app:tint="@color/brand_primary" />

            </LinearLayout>

            <!-- Action Buttons Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:strokeWidth="0dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/viewProfileBtn"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="View Profile"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/brand_primary"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_person"
                            app:iconTint="@color/white"
                            app:iconGravity="top"
                            app:iconPadding="8dp" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:strokeWidth="0dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editProfileBtn"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="Edit Profile"
                            android:textColor="@color/brand_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/brand_light"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_person"
                            app:iconTint="@color/brand_primary"
                            app:iconGravity="top"
                            app:iconPadding="8dp" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Row 2 (Conditional based on user type) -->
                <LinearLayout
                    android:id="@+id/coachActionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:strokeWidth="0dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/viewStudentsBtn"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="My Students"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/brand_secondary"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_student"
                            app:iconTint="@color/white"
                            app:iconGravity="top"
                            app:iconPadding="8dp" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:strokeWidth="0dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/manageSessionsBtn"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="Review Videos"
                            android:textColor="@color/brand_secondary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/brand_light"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_video_camera"
                            app:iconTint="@color/brand_secondary"
                            app:iconGravity="top"
                            app:iconPadding="8dp" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/studentActionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:strokeWidth="0dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/findCoachBtn"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="Find Coach"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/brand_secondary"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_coach"
                            app:iconTint="@color/white"
                            app:iconGravity="top"
                            app:iconPadding="8dp" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:strokeWidth="0dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/bookSessionBtn"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="Book Session"
                            android:textColor="@color/brand_secondary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/brand_light"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_calendar"
                            app:iconTint="@color/brand_secondary"
                            app:iconGravity="top"
                            app:iconPadding="8dp" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Development Status Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeColor="@color/brand_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header with Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_trophy"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/brand_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸš€ Development Progress"
                            android:textColor="@color/brand_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Progress Items -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Phase 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ…"
                                android:textSize="16sp"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Phase 1: Authentication &amp; Registration"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Complete"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="@drawable/status_badge_background"
                                android:backgroundTint="@color/success"
                                android:textColor="@color/white"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                        <!-- Phase 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”„"
                                android:textSize="16sp"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Phase 2: CRUD Profile Management"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In Progress"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="@drawable/status_badge_background"
                                android:backgroundTint="@color/brand_primary"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                        <!-- Phase 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŽ¥"
                                android:textSize="16sp"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Phase 3: Video Annotation System"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coming Soon"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="@drawable/status_badge_background"
                                android:backgroundTint="@color/text_secondary"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                        <!-- Phase 4 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“Š"
                                android:textSize="16sp"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Phase 4: Analytics &amp; Progress Tracking"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Planned"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="@drawable/status_badge_background"
                                android:backgroundTint="@color/text_secondary"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Version Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/brand_card_background"
                android:backgroundTint="@color/brand_light"
                android:padding="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sports_cricket"
                    app:tint="@color/brand_primary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Become Better v2.0 â€¢ Phase 2 Development"
                    android:textColor="@color/brand_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>