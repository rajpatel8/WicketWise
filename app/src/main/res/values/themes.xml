<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Become Better branding -->
    <style name="Theme.BecomeBetter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorSecondaryVariant">@color/brand_accent</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/navigation_bar</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Material Design 3 colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_on_primary</item>

        <!-- Action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Material Components -->
        <item name="materialCardViewStyle">@style/Widget.BecomeBetter.CardView</item>
        <item name="materialButtonStyle">@style/Widget.BecomeBetter.Button</item>
        <item name="textInputStyle">@style/Widget.BecomeBetter.TextInputLayout</item>
    </style>

    <!-- Dark theme variant -->
    <style name="Theme.BecomeBetter.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors (adjusted for dark theme) -->
        <item name="colorPrimary">@color/brand_accent</item>
        <item name="colorPrimaryVariant">@color/brand_secondary</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/brand_light</item>
        <item name="colorSecondaryVariant">@color/brand_accent</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Dark background colors -->
        <item name="android:windowBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">#2A2A2A</item>

        <!-- Status bar for dark theme -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Text colors for dark theme -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>
        <item name="android:textColorHint">#80FFFFFF</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.BecomeBetter.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/brand_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_cricket_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.BecomeBetter</item>
    </style>

    <!-- Custom Card View Style -->
    <style name="Widget.BecomeBetter.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="Widget.BecomeBetter.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Widget.BecomeBetter.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_primary</item>
        <item name="android:textColor">@color/button_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Custom Text Input Layout Style -->
    <style name="Widget.BecomeBetter.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/brand_primary</item>
        <item name="hintTextColor">@color/brand_primary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Video Player Theme -->
    <style name="Theme.BecomeBetter.VideoPlayer" parent="Theme.BecomeBetter">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <!-- Cricket-themed styles -->
    <style name="BecomeBetter.Header">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="BecomeBetter.Subheader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BecomeBetter.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="BecomeBetter.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Profile badge style -->
    <style name="BecomeBetter.Badge">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">@color/brand_light</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Progress indicator style -->
    <style name="BecomeBetter.ProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">@color/brand_primary</item>
        <item name="trackColor">@color/brand_light</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorCornerRadius">4dp</item>
    </style>
</resources>